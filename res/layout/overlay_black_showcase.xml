<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/outline_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/overlay_text_showcase_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="17dp"
                android:text="@string/settings_overlay_black" />

            <ImageButton
                android:id="@+id/overlay_switch_right_black"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_action_right" />

            <ImageButton
                android:id="@+id/overlay_switch_left_black"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/overlay_switch_right_black"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_action_left" />
        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/overlay_black_settings"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/overlay_black_settings" />

        <ImageView
            android:id="@+id/overlay_black_qs"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/overlay_black_qs" />

    </LinearLayout>

</RelativeLayout>