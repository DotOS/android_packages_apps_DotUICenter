<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/app_name"
                app:titleTextColor="?attr/colorAccent">

            </android.support.v7.widget.Toolbar>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_container"
        android:layout_marginTop="6dp"
        android:clickable="true"
        tools:context="com.dotos.uicenter.BaseActivity">

        <include
            layout="@layout/welcome_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/toolbar_container"
        android:layout_marginTop="4dp"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/expand_collpase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            app:elevation="2dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_theme_main" />

        <com.dot.uicenter.utils.ExpandableLayout
            android:id="@+id/expandable_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            android:importantForAutofill="yes">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:background="?attr/colorPrimary"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

                <com.dot.uicenter.utils.BottomNavigationViewCustom
                    android:id="@+id/navigation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:animateLayoutChanges="true"
                    android:background="?attr/colorPrimary"
                    android:saveEnabled="true"
                    app:elevation="0dp"
                    app:itemIconTint="?attr/colorAccent"
                    app:itemTextColor="?android:attr/textColorPrimary"
                    app:menu="@menu/navigation">

                </com.dot.uicenter.utils.BottomNavigationViewCustom>

                <LinearLayout
                    android:id="@+id/fragments_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:orientation="vertical" />

                <include
                    layout="@layout/fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </com.dot.uicenter.utils.ExpandableLayout>
    </LinearLayout>
</RelativeLayout>
