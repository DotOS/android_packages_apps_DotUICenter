<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlay_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dot.uicenter.utils.WrapContentViewPager
        android:id="@+id/overlay_review_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true" />

    <com.dot.uicenter.pageindicator.PageIndicatorView
        android:id="@+id/page_indicator_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overlay_review_container"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:piv_animationType="worm"
        app:piv_autoVisibility="true"
        app:piv_count="2"
        app:piv_interactiveAnimation="true"
        app:piv_scaleFactor="12"
        app:piv_selectedColor="@color/colorAccent"
        app:piv_unselectedColor="@color/colorPrimaryDark"
        app:piv_viewPager="@+id/viewPager" />

</RelativeLayout>