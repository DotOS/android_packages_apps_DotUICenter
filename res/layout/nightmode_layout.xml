<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/legacy_night_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Switch
                        android:id="@+id/enable_night_legacy"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:paddingEnd="14dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="14dp"
                        android:text="Android in-build Night Mode"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView2"
                        android:layout_below="@+id/textView2"
                        android:layout_marginBottom="14dp"
                        android:text="Enable Legacy Android Night Mode" />
                </RelativeLayout>

                <com.dot.uicenter.utils.ExpandableLayout
                    android:id="@+id/legacy_night_mode_prefs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:exl_expanded="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <SeekBar
                                android:id="@+id/warm_intensity_legacy"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignStart="@+id/textView10"
                                android:layout_below="@+id/textView10"
                                android:layout_marginBottom="6dp"
                                android:layout_marginEnd="27dp"
                                android:max="4082"
                                android:progress="2650" />

                            <ImageButton
                                android:id="@+id/plus_warm_legacy"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignBottom="@+id/warm_intensity_legacy"
                                android:layout_alignParentStart="true"
                                android:layout_alignTop="@+id/warm_intensity_legacy"
                                android:layout_marginStart="7dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:tint="?android:attr/textColorPrimary"
                                app:srcCompat="@drawable/ic_add" />

                            <ImageButton
                                android:id="@+id/remove_warm_legacy"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignBottom="@+id/warm_intensity_legacy"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/warm_intensity_legacy"
                                android:layout_marginEnd="7dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:tint="?android:attr/textColorPrimary"
                                app:srcCompat="@drawable/ic_remove" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="27dp"
                                android:layout_marginTop="16dp"
                                android:text="Warm Color Intensity" />
                        </RelativeLayout>

                    </LinearLayout>

                </com.dot.uicenter.utils.ExpandableLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/custom_night_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Switch
                        android:id="@+id/enable_night_custom"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:paddingEnd="14dp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="14dp"
                        android:text="dotOS Night Mode"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView8"
                        android:layout_below="@+id/textView8"
                        android:layout_marginBottom="14dp"
                        android:layout_marginEnd="64dp"
                        android:text="Enable Modified stock Night Mode, More Options incomming" />
                </RelativeLayout>

                <com.dot.uicenter.utils.ExpandableLayout
                    android:id="@+id/custom_night_mode_prefs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:exl_expanded="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/add_low_brightness"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignBottom="@+id/brightness_intensity"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/brightness_intensity"
                                android:layout_marginEnd="7dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:tint="?android:attr/textColorPrimary"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_add" />

                            <ImageButton
                                android:id="@+id/remove_low_brightness"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignBottom="@+id/brightness_intensity"
                                android:layout_alignParentStart="true"
                                android:layout_alignTop="@+id/brightness_intensity"
                                android:layout_marginStart="7dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:tint="?android:attr/textColorPrimary"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_remove" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="27dp"
                                android:layout_marginTop="16dp"
                                android:text="Warm Color Intensity" />

                            <SeekBar
                                android:id="@+id/warm_intensity"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignStart="@+id/textView11"
                                android:layout_below="@+id/textView11"
                                android:layout_marginEnd="27dp"
                                android:max="4082"
                                android:progress="2650" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/warm_intensity"
                                android:layout_below="@+id/warm_intensity"
                                android:layout_marginTop="14dp"
                                android:text="Lower Brightness"
                                android:visibility="gone" />

                            <SeekBar
                                android:id="@+id/brightness_intensity"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignStart="@+id/textView12"
                                android:layout_below="@+id/textView12"
                                android:layout_marginBottom="14dp"
                                android:layout_marginEnd="27dp"
                                android:max="250"
                                android:progress="40"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/warm_intensity"
                                android:layout_below="@+id/brightness_intensity"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="14dp"
                                android:layout_marginTop="12dp"
                                android:text="Read Mode" />

                            <Switch
                                android:id="@+id/read_mode_switch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/textView13"
                                android:layout_alignBottom="@+id/textView13"
                                android:layout_alignParentEnd="true"
                                android:paddingEnd="14dp" />

                            <ImageButton
                                android:id="@+id/plus_warm"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignBottom="@+id/warm_intensity"
                                android:layout_alignParentStart="true"
                                android:layout_alignTop="@+id/warm_intensity"
                                android:layout_marginStart="7dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:tint="?android:attr/textColorPrimary"
                                app:srcCompat="@drawable/ic_add" />

                            <ImageButton
                                android:id="@+id/remove_warm"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignBottom="@+id/warm_intensity"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/warm_intensity"
                                android:layout_marginEnd="7dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:tint="?android:attr/textColorPrimary"
                                app:srcCompat="@drawable/ic_remove" />

                        </RelativeLayout>
                    </LinearLayout>
                </com.dot.uicenter.utils.ExpandableLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>