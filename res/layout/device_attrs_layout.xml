<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?android:attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_attr_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEVICE PRIMARY COLOR"
            android:textColor="?android:attr/colorPrimary" />

        <TextView
            android:id="@+id/txt_attr_primaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEVICE PRIMARY DARK COLOR"
            android:textColor="?android:attr/colorPrimaryDark" />

        <TextView
            android:id="@+id/txt_attr_accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEVICE ACCENT COLOR"
            android:textColor="?android:attr/colorAccent" />

        <TextView
            android:id="@+id/txt_attr_textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEVICE TEXTCOLOR PRIMARY"
            android:textColor="?android:attr/textColorPrimary" />
    </LinearLayout>
</android.support.v7.widget.CardView>